<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComposeActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFragment"
        android:layout_alignBottom="@+id/etFragment"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="-48dp"
        app:counterEnabled="true"
        app:counterMaxLength="10">


    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/tx_cancel"
        android:layout_width="93dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/cancel"
        tools:ignore="SpeakableTextPresentCheck" />


    <ImageButton
        android:id="@+id/Pr_profil"
        android:layout_width="76dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="561dp"
        android:layout_marginEnd="23dp"
        android:src="@drawable/profil"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/etFragment"
        android:layout_width="737dp"
        android:layout_height="279dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="259dp"
        android:backgroundTint="@color/ocean_blue"
        android:ems="10"
        android:gravity="start|top"
        android:hint="What's happenning?"
        android:inputType="textMultiLine"
        android:minLines="5" />




    <TextView
        android:id="@+id/Nom"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Pr_profil"
        android:layout_marginStart="-127dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/Sur_Nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nom"
        android:layout_alignStart="@+id/Pr_profil"
        android:layout_marginStart="-106dp"
        android:layout_marginTop="11dp"
        android:text="TextView" />


    <Button
        android:id="@+id/btnFragment"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-66dp"
        android:backgroundTint="@color/ocean_blue"
        android:text="TWEET" />


</RelativeLayout>






