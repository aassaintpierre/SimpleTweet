<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="false"
        android:layout_marginRight="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="sans-serif-medium"
        android:textSize="17sp"
        tools:text="Sarah42" />

    <TextView
        android:id="@+id/tScreenName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="sans-serif-medium"
        android:text="user"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:autoLink="all"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        tools:text="This is my tweet!!" />

    <ImageView
        android:id="@+id/tImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/tvBody"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tImage"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="sans-serif-medium"
        tools:text="a moment ago" />

    <TextView
        android:id="@+id/twComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tImage"
        android:layout_marginStart="19dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:drawableLeft="@drawable/ic_outline_mode_comment_24" />

    <TextView
        android:id="@+id/twShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tImage"
        android:layout_marginStart="239dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:drawableLeft="@drawable/ic_outline_share_24" />

    <TextView
        android:id="@+id/twStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tImage"
        android:layout_marginStart="176dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:drawableLeft="@drawable/ic_outline_star_border_24" />

    <TextView
        android:id="@+id/twRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tImage"
        android:layout_marginStart="84dp"
        android:layout_marginTop="44dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:drawableLeft="@drawable/ic_repeat" />
</RelativeLayout>